<!-- lists all the users I've created --> 
<!doctype html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
        <!-- if the locals object has a users array --> 
        <% if (locals.users) {%>
            <!-- for each element in the users array, render an li element with each
            element's id, firstName, and lastName properties -->
            <% users.forEach(user => { %>
                <li>
                    ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>, Email: <%= user.email %>, Age: <%= user.age %>, Bio: <%= user.bio %> 
                    <!-- Update button next to each user to make my GET request to the route -->
                    <a href="/<%= user.id %>/update">Update</a>
                </li>
                <!-- sending a POST request to my route, so I need a form -->
                <form action="/<%= user.id %>/delete" method="POST" style="display:inline;">
                  <!-- confirm() displays a modal dialog box with OK and Cancel buttons and returns a 
                   boolean based on the user's choice -->
                  <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                </form>
            <% }); %>
        <% } %>
    </ul>
    <a href="/create">Create a user</a>
  </body>
</html>
